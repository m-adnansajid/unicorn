WindowManager:
    MainWindow:
    SecondWindow:
    RegisterWindow:

<MainWindow>:
    name: "main"
    GridLayout:
        cols: 1

        GridLayout:
            cols: 2

            Label:
                text: "Password: "

            TextInput:
                id: passw
                multiline: False

        Button:
            text: "Submit"
            on_release:
                app.root.current = "register" if passw.text == "tim" else "main"
                root.manager.transition.direction = "left"

<SecondWindow>:
    name: "second"
    GridLayout:
        cols: 1


    Button:
        text: "Go Back"
        on_release:
            app.root.current = "main"
            root.manager.transition.direction = "right"


<RegisterWindow>:
    name: "register"
    GridLayout:
        cols: 1
        Label:
            text: "Add new Contact"
            size_hint: (.2, None)
            height: 50
        GridLayout:
            rows: 5
            cols: 2
            padding: 10
            spacing: 10
            Label:
                size_hint: (.2, None)
                height: 30
                text: 'Name: '
            TextInput:
                size_hint: (.2, None)
                height: 30
                id: name
                multiline: False

            Label:
                size_hint: (.2, None)
                height: 30
                text: 'Surname: '
            TextInput:
                size_hint: (.2, None)
                height: 30
                id: surname
                multiline: False

            Label:
                size_hint: (.2, None)
                height: 30
                text: 'Number: '
            TextInput:
                size_hint: (.2, None)
                height: 30
                id: number
                multiline: False

            Label:
                size_hint: (.2, None)
                height: 30
                text: 'Work: '
            CheckBox:
                size_hint: (.2, None)
                height: 30
                id: work

            Label:
                size_hint: (.2, None)
                height: 30
                text: 'Private: '
            CheckBox:
                size_hint: (.2, None)
                height: 30
                id: private


