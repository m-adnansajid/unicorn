<HomeWindow>:
    name: "home"
    GridLayout:
        cols: 1

        MDGridLayout:
            adaptive_height: True
            md_bg_color: app.theme_cls.primary_color

            Label:
                text: "Password: "

            MDTextField:
                hint_text: "Enter name"
                icon_right: "text"
                icon_right_color: app.theme_cls.primary_color
                size_hint_x:None
                width:300
        Button:
            text: "Submit"
            on_release:
                app.root.current = "register" if passw.text == "tim" else "home"
                root.manager.transition.direction = "left"

<SecondWindow>:
    name: "second"
    MDGridLayout:
        adaptive_height: True
        md_bg_color: app.theme_cls.primary_color
    Button:
        text: "Go Back"
        on_release:
            app.root.current = "home"
            root.manager.transition.direction = "right"



